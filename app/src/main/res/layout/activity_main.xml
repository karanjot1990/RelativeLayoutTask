<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvImage"
        android:text="@string/space_station"
        android:textSize="15sp"
        android:background="@color/white"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/tvFlights"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/download" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFlights"
        android:layout_toEndOf="@id/tvImage"
        android:text="@string/Flights"
        android:textSize="15sp"
        android:background="@color/white"
        android:layout_marginStart="20dp"/>



    <ImageView
        android:id="@+id/tvRovers"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/rovers"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRovers"
        android:layout_toEndOf="@id/tvFlights"
        android:text="@string/Rovers"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvDCA"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_below="@id/tv"
        android:background="@color/black"
        android:layout_alignParentStart="true"
        android:text="@string/DCA"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/MARS"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:gravity="center"
        android:layout_below="@id/tv"
        android:layout_alignParentEnd="true"
        android:text="@string/MARS"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/arrows_left_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arrows_left_right"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvFlights"
        android:layout_marginTop="50dp"/>

    
    
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/Oneway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Wayt"
        android:padding="20dp"
        android:background="#F31607"
        android:layout_margin="20sp"
        android:layout_below="@+id/tvDCA"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:textSize="30sp"
        android:background="#3930ee"
        android:layout_margin="30sp"
        android:layout_below="@id/Oneway"/>
</RelativeLayout>